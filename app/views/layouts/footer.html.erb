<footer class="wrap bg-black padded-vert">
  <div class="row">

    <!-- START FOOTER WIDGET 1 -->
    <div class="medium-6 large-3 columns">
      <h4>Sign up for our mailing list</h4>
      <%= render 'layouts/mailchimp' %>
    </div>
    <!-- END FOOTER WIDGET 1 -->

    <!-- START FOOTER WIDGET 3 -->
    <div class="medium-6 large-3 columns">
      <h4>Pages &amp; Resources</h4>
      <ul class="no-style">

        <li class="active"><a href="http://codeforkids.ca/pages/about" class="menu-link" title="Go To Code For Kids About Code For Kids">About Code For Kids</a>
        </li>

        <li><a href="http://codeforkids.ca/pages/design-guidelines" class="menu-link" title="Go To Code For Kids Brand Guidelines">Brand Guidelines</a>
