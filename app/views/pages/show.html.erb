<div class="row padded-vert-small">

  <ul class="breadcrumbs">
    <li><a href="/">Home</a></li>
    <li><%= link_to @page.category.name, show_category_path(@page.category.handle) %></li>
    <li class="current"><%= @page.title %></li>
  </ul>

</div>

<% if current_user %>
  <div class="row padded-vert-small">
    <div class="panel callout">
      ADMIN ONLY:<br>
      <%= pluralize @page.redirects.count, "redirect" %> for this page.
    </div>
  </div>
<% end %>

<section class="row" id="page">

    <div class="large-12 columns padded-vert page-padding-horiz">
      <h1 class="title"><%= @page.title %></h1>
      <p class="date">Updated last on <time pubdate="" datetime="<%= @page.last_updated %>"><%= @page.last_updated %></time></p>
      <div class="page-content">
        <%= sanitize @page.content.gsub(/src="http:\/\/([^']+)"/,'src="https://\1"') %>
      </div>
      <%= render 'page_info' %>
      <%= render 'help_info' %>
      <hr>
      <%= render 'disqus' %>
    </div>

</section>
