<% if session[:user_id] %><p><%= link_to "New page", new_category_page_path(@category) %></p><% end %>

<div class="row padded-vert">

<% @pages.each do |page| %>
<div class="medium-3 columns"  style="float:left !important">
  <div class="panel padded-vert" style="height:200px;">
    <h3><%= page.title %></h3>
    <p><%= truncate(page.content, length: 80) %></p>
    <%= link_to "Read more", [@category, page] %>
  </div>
</div>
<% end %>

</div>
