<div class="row padded-vert">
  <%= render template: 'layouts/alert' %>
</div>

<% if session[:user_id] %><p><%= link_to "New category", new_category_path %></p><% end %>

<div class="row padded-vert">

<% @categories.each do |category| %>
<div class="medium-3 columns" style="float:left;">
  <div class="panel padded-vert" style="height:200px;">
    <h3><%= category.name %></h3>
    <p>There are <%= category.pages.count %> articles in this category</p>
    <%= link_to "View category", category %>
  </div>
</div>
<% end %>

</div>

